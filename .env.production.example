# ==============================================
# BrandFlow AI - Production Environment Variables
# ==============================================
#
# This file shows the PRODUCTION configuration.
# Copy values to your hosting platform's environment variables.
#
# IMPORTANT: Do NOT commit this file with real values!
#
# ==============================================

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://app.brandflow.ai

# Database (Neon PostgreSQL with connection pooling)
DATABASE_URL=postgresql://user:password@host/brandflow?sslmode=require&pgbouncer=true

# Redis (Upstash)
REDIS_URL=rediss://default:password@host:6379
REDIS_TOKEN=

# Authentication (Clerk - LIVE keys)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_...
CLERK_SECRET_KEY=sk_live_...
CLERK_WEBHOOK_SECRET=whsec_...

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/signup
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# AI Services
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Storage (Cloudflare R2)
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_R2_ACCESS_KEY=
CLOUDFLARE_R2_SECRET_KEY=
CLOUDFLARE_R2_BUCKET=brandflow-assets-prod
CLOUDFLARE_R2_PUBLIC_URL=https://assets.brandflow.ai

# Payments (Stripe - LIVE keys)
STRIPE_SECRET_KEY=sk_live_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_STARTER=price_...
STRIPE_PRICE_ID_PRO=price_...
STRIPE_PRICE_ID_BUSINESS=price_...

# ==============================================
# Social Platform APIs (Production Redirect URIs)
# ==============================================

# LinkedIn
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URI=https://app.brandflow.ai/api/auth/linkedin/callback

# Twitter/X
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_REDIRECT_URI=https://app.brandflow.ai/api/auth/twitter/callback

# Meta (Facebook & Instagram)
META_APP_ID=
META_APP_SECRET=
FACEBOOK_REDIRECT_URI=https://app.brandflow.ai/api/auth/facebook/callback
INSTAGRAM_REDIRECT_URI=https://app.brandflow.ai/api/auth/instagram/callback

# Pinterest
PINTEREST_APP_ID=
PINTEREST_APP_SECRET=
PINTEREST_REDIRECT_URI=https://app.brandflow.ai/api/auth/pinterest/callback

# TikTok
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_REDIRECT_URI=https://app.brandflow.ai/api/auth/tiktok/callback

# Monitoring & Analytics
SENTRY_DSN=https://...@sentry.io/...
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...
NEXT_PUBLIC_POSTHOG_KEY=phc_...
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
